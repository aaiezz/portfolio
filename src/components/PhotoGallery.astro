---
interface Props {
  images: {
    src: string;
    alt: string;
    width: 'full' | 'half';
    height: 'tall' | 'normal';
  }[];
}

const { images } = Astro.props;
---

<div class="grid grid-cols-2 md:grid-cols-3 gap-4 auto-rows-[300px]">
  {images.map((image) => (
    <div class={`
      overflow-hidden rounded-lg shadow-lg
      ${image.width === 'full' ? 'col-span-2 md:col-span-3' : ''}
      ${image.height === 'tall' ? 'row-span-2' : ''}
    `}>
      <img
        src={image.src}
        alt={image.alt}
        class="w-full h-full object-cover transition-all duration-300 filter grayscale hover:grayscale-0 hover:scale-105"
      />
    </div>
  ))}
</div>