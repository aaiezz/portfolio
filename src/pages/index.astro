<script>
  // Lazy load sections below the fold using Intersection Observer API
  document.addEventListener('DOMContentLoaded', () => {
    const lazySections = document.querySelectorAll('.lazy-load');

    const observer = new IntersectionObserver((entries, observer) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('loaded');
          observer.unobserve(entry.target);
        }
      });
    }, { threshold: 0.25 });

    lazySections.forEach(section => {
      observer.observe(section);
    });
  });
</script>

<script>
 document.addEventListener('scroll', () => {
  const parallaxBg = document.querySelector('.parallax-bg');
  const scrollPosition = window.scrollY;
  
  // Adjust the speed of the parallax effect here
  const parallaxSpeed = 0.1;

  // Calculate the scale factor dynamically
  const scaleAmount = 1 + (scrollPosition / 1000); // Scale starts from 1 and increases based on scroll
  
  // Set the new scale and the blur effect based on the scroll position
  parallaxBg.style.transform = `translateY(-${scrollPosition * parallaxSpeed}px) scale(${scaleAmount})`;
  parallaxBg.style.filter = `blur(${Math.min(scrollPosition * 0.050, 25)}px)`; // Max blur is 25px
});

</script>

<style>
/* Parallax effect with scaling */
.parallax-bg {
  will-change: transform;
  transition: transform 0.1s ease-out;
}

  /* Class for lazy-loaded sections */
  .lazy-load {
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .lazy-load.loaded {
    opacity: 1;
  }
</style>
