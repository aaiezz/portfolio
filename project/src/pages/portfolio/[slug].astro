---
import Layout from '../../layouts/Layout.astro';
import { projects } from '../../data/projects';

export function getStaticPaths() {
  return projects.map(project => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

const { project } = Astro.props;
---

<Layout title={`${project.title} - Aiez A.`} description={project.description}>
  <div class="pt-24 pb-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <img
          src={project.imageUrl}
          alt={project.title}
          class="w-full h-[60vh] object-cover rounded-lg shadow-lg mb-8"
        />
        
        <h1 class="text-4xl font-bold mb-4">{project.title}</h1>
        <p class="text-xl text-gray-600 mb-8">{project.description}</p>
        
        <div class="grid grid-cols-2 gap-8 mb-12">
          <div>
            <h2 class="text-xl font-semibold mb-2">Client</h2>
            <p class="text-gray-600">{project.client}</p>
          </div>
          <div>
            <h2 class="text-xl font-semibold mb-2">Tools Used</h2>
            <ul class="space-y-1">
              {project.tools.map(tool => (
                <li class="text-gray-600">{tool}</li>
              ))}
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>