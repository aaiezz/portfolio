---
import Layout from '../../layouts/Layout.astro';
import { PortfolioFilter } from '../../components/PortfolioFilter';
import { ProjectCard } from '../../components/ProjectCard';
import { projects } from '../../data/projects';
---

<Layout title="Portfolio - Aiez Ahmed" description="Explore my work across UX/UI design, photography, videography, and graphic design.">
  <div class="pt-24 pb-12">
    <div class="container mx-auto px-4">
      <h1 class="text-4xl md:text-5xl font-bold text-center mb-8">Portfolio</h1>
      <p class="text-center text-gray-600 max-w-2xl mx-auto mb-12">
        Explore my work across different creative disciplines, from UX/UI design to photography and videography.
      </p>
      
      <PortfolioFilter client:load />
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {projects.map((project) => (
          <ProjectCard
            title={project.title}
            category={project.category}
            imageUrl={project.imageUrl}
            client={project.client}
            slug={project.slug}
          />
        ))}
      </div>
    </div>
  </div>
</Layout>
